<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:clickable="true"
    android:focusable="true"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:background="?attr/selectableItemBackgroundBorderless"> <ImageView
    android:id="@+id/nav_icon"
    android:layout_width="24dp"
    android:layout_height="24dp"
    app:tint="@color/nav_item_color"  tools:src="@drawable/tracker"
    android:contentDescription="Navigation Icon"/>

    <TextView
        android:id="@+id/nav_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/nav_item_color"
        android:layout_marginTop="2dp"
        android:textFontWeight="@integer/material_motion_duration_medium_1"
        android:textSize="11sp"
        tools:text="Трекер"/>
</LinearLayout>