<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ProfileFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Фото профиля"
                    android:src="@drawable/ava"
                    app:civ_border_color="@color/colorAccent"
                    app:civ_border_width="1dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Настройки профиля"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="г.Пхукет, Таиланд"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/SectionHeader"
                android:text="Настройки приложения" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhite">

                <include layout="@layout/item_setting_arrow"
                    android:id="@+id/setting_units" />

                <View style="@style/SettingDivider" />

                <include layout="@layout/item_setting_arrow"
                    android:id="@+id/setting_language" />

                <View style="@style/SettingDivider" />

                <include layout="@layout/item_setting_arrow"
                    android:id="@+id/setting_theme" />

            </LinearLayout>

            <TextView
                style="@style/SectionHeader"
                android:text="Настройки уведомлений" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhite">

                <include layout="@layout/item_setting_toggle"
                    android:id="@+id/notif_tracking" />

                <View style="@style/SettingDivider" />

                <include layout="@layout/item_setting_toggle"
                    android:id="@+id/notif_pause" />

                <View style="@style/SettingDivider" />

                <include layout="@layout/item_setting_toggle"
                    android:id="@+id/notif_daily" />

            </LinearLayout>

            <TextView
                style="@style/SectionHeader"
                android:text="Управление данными" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhite">

                <include layout="@layout/item_setting_arrow"
                    android:id="@+id/data_storage" />

                <View style="@style/SettingDivider" />

                <include layout="@layout/item_setting_arrow"
                    android:id="@+id/data_export" />

                <View style="@style/SettingDivider" />

                <LinearLayout
                    android:id="@+id/data_delete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Удалить все данные"
                        android:textColor="#F44336"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                style="@style/SectionHeader"
                android:text="О приложении" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhite">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Версия приложения"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/app_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.0.0"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="16sp" />
                </LinearLayout>

                <View style="@style/SettingDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Разработчик"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/app_developer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vialogue (Василевский И.В.)"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>