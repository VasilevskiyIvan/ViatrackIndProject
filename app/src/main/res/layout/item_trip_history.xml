<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_image_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.42" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_image_end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="H,4:3">
        <ImageView
        android:id="@+id/image_trip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/default_city"
        android:contentDescription="Trip Image" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_trip_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Сидней, Австралия"
        android:textColor="@color/colorTextPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/card_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#eee"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@id/tv_trip_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_trip_name" />

    <TextView
        android:id="@+id/tv_stats_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23090 фото"
        android:textColor="@color/colorTextSecondary"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/card_image"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:drawableStartCompat="@drawable/photo_mini"
        app:drawableTint="@color/colorAccent"
        android:drawablePadding="4dp"/>

    <TextView
        android:id="@+id/tv_stats_videos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1020 видео"
        android:textColor="@color/colorTextSecondary"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tv_stats_photos"
        app:layout_constraintTop_toBottomOf="@id/tv_stats_photos"
        app:drawableStartCompat="@drawable/video_mini"
        app:drawableTint="@color/colorAccent"
        android:drawablePadding="4dp"/>

    <TextView
        android:id="@+id/tv_stats_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="150 км"
        android:textColor="@color/colorTextSecondary"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tv_stats_photos"
        app:layout_constraintTop_toBottomOf="@id/tv_stats_videos"
        app:drawableStartCompat="@drawable/map_mini"
        app:drawableTint="@color/colorAccent"
        android:drawablePadding="4dp"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="€0.00"
        android:textColor="@color/colorTextPrimary"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="end"
        android:layout_marginEnd="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_stats_photos"
        app:layout_constraintBottom_toBottomOf="@id/tv_stats_distance" />

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#eee"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@id/tv_stats_distance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_stats_distance" />

    <TextView
        android:id="@+id/tv_trip_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="01/07/2025 - 07/07/2025"
        android:textColor="@color/colorTextSecondary"
        android:textSize="10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@id/tv_stats_photos"
        app:layout_constraintTop_toBottomOf="@id/tv_stats_distance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:drawableStartCompat="@drawable/calendar_mini"
        app:drawableTint="@color/colorTextSecondary"
        android:drawablePadding="4dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>