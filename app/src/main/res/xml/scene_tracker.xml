<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/tracker_panel"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Constraint android:id="@+id/btn_start_event">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toTopOf="@id/tracker_panel"
                app:layout_constraintStart_toStartOf="parent" />
            <PropertySet app:visibilityMode="ignore" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/tracker_panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.65"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Constraint
            android:id="@+id/btn_expand_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="180"
            app:layout_constraintBottom_toTopOf="@id/tracker_panel"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp" />

        <Constraint android:id="@+id/btn_start_event">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toTopOf="@id/tracker_panel"
                app:layout_constraintStart_toStartOf="parent" />
            <PropertySet app:visibilityMode="ignore" />
        </Constraint>
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start"
        app:duration="400">
        <OnSwipe
            app:touchAnchorId="@id/tracker_panel"
            app:dragDirection="dragUp"
            app:touchAnchorSide="top" />
    </Transition>
</MotionScene>